{
  "name": "@bpev/bext",
  "version": "1.2.0-rc.1",
  "exports": {
    "./bin": "./source/main.ts",
    ".": "./source/mod.ts",
    "./types": "./source/types/chrome.ts",
    "./mock_browser": "./source/mock_browser/main.ts"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["source", "examples"],
    "exclude": ["dist"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^0.225.3"
  },
  "lint": {
    "include": ["source"],
    "exclude": ["dist", "examples"]
  },
  "publish": {
    "exclude": ["dist", "examples"]
  },
  "tasks": {
    "build": "(cd examples/preact_app && deno run -A ../../source/main.ts build)",
    "check": "deno check source/main.ts && deno check source/mod.ts",
    "dev": "(cd examples/preact_app && deno run -A ../../source/main.ts build -w)",
    "test": "deno task test:source && deno task build && deno task test:examples && deno publish --dry-run",
    "test:examples": "(cd examples/preact_app && deno task test)",
    "test:source": "deno fmt && deno lint && deno task check && deno test source"
  },
  "test": {
    "include": ["source"],
    "exclude": ["dist", "examples"]
  }
}
